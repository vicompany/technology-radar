root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_style = tab

[*.json]
indent_style = space
indent_size = 2

[**.html]
indent_style = space
indent_size = 4

[**.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
